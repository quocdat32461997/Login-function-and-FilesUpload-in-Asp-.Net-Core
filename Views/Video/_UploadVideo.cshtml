@model dat_q_ngo.ViewModels.VideoViewModel;

<div class="col-12">
    <form class="lg-form" asp-controller="Video" asp-action="UploadVideo" method="post" enctype="multipart/form-data">
        <h5>Upload your videos now.</h5>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group title">
            @Html.Label("Title: ")
            @Html.TextBoxFor(m => m.Title)
        </div>
        <div class="form-group genre">
            @Html.Label("Genre: ")
            @Html.TextBoxFor(m => m.Genre)
        </div>
        <div class="form-group videos">
            <input asp-for="Video" style="border-bottom:0.5px solid lightgrey;" type="file" class="file" data-show-preview="true">
        </div>
        <button class="btn btn-primary">Upload</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}